int main() {
    const int SIZE = 10;
    int array[SIZE] = {0};

    fillArray(array, SIZE);
    printArray(array, SIZE);

    sortArray(array, SIZE);
    std::cout << std::endl;
    printArray(array, SIZE);









    return 0;
}

void fillArray(int array[], int size){

    srand(time(0));

    for(int i = 0; i < size; i++){

        int temp = rand() % 50;
        array[i] = temp;

    }

}

